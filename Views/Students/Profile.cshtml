@model SES.Models.ViewModels.StudentProfileVm
@{
    ViewData["Title"] = "Student Profile";
}

<h2>@Model.LastName, @Model.FirstName</h2>
<p>Since: @Model.Since.ToShortDateString()</p>

<h4>Enrolled courses (@Model.Courses.Count)</h4>

@if (Model.Courses.Count == 0)
{
    <p>No course enrollments yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr><th>Course</th><th>Credits</th><th>Grade</th></tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Courses)
        {
            <tr>
                <td>@c.Title</td>
                <td>@c.Credits</td>
                <td>@(c.Grade.HasValue ? c.Grade.Value.ToString("0.0") : "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
