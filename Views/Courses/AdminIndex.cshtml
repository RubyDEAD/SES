@model SES.Models.ViewModels.CoursesAdminVm

<div class="container py-4">
    <div class="bg-white p-4 mb-4 rounded shadow-sm d-flex justify-content-between align-items-center">
        <h1 class="h3 fw-bold text-primary mb-0">ðŸ“š Admin Portal</h1>

        <div class="d-flex align-items-center gap-2">
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCourseModal">
                <i class="fas fa-plus me-2"></i> Add Course
            </button>

            <form asp-controller="Users" asp-action="Logout" method="post" class="mb-0">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light fw-semibold">
            Manage Courses
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Credits</th>
                        <th>Department</th>
                        <th>Max Students</th>
                        <th>Enrolled</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var c in Model.Courses)
                {
                    <tr>
                        <td class="fw-semibold">@c.Title</td>
                        <td>@c.Credits</td>
                        <td>@c.Department</td>
                        <td>@c.MaxStudents</td>
                        <td>
                            @c.EnrolledCount
                            @if (c.IsFull)
                            {
                                <span class="badge bg-danger ms-2">Full</span>
                            }
                            else if (c.EnrolledCount > 0)
                            {
                                <span class="badge bg-success ms-2">Open</span>
                            }
                        </td>
                        <td class="text-end">
                            <button type="button" class="btn btn-primary btn-sm me-1"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editCourseModal-@c.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>

                            <a asp-action="ViewStudents" asp-route-id="@c.Id" class="btn btn-info btn-sm me-1">
                                <i class="bi bi-people"></i> Students
                            </a>

                            <form asp-action="Delete" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@c.Id" />
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Delete this course?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editCourseModal-@c.Id" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content shadow-sm">
                                <form asp-action="Edit" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="modal-header">
                                        <h5 class="modal-title text-primary">Edit</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="Id" value="@c.Id" />
                                        <div class="mb-3">
                                            <label class="form-label">Title</label>
                                            <input name="Title" value="@c.Title" class="form-control" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Credits</label>
                                            <input name="Credits" value="@c.Credits" class="form-control" type="number" min="1" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Department</label>
                                            <input name="Department" value="@c.Department" class="form-control" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Max Students</label>
                                            <input name="MaxStudents" value="@c.MaxStudents" class="form-control" type="number" min="1" required />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Course Modal -->
<div class="modal fade" id="addCourseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title text-success">âž• Add New Course</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewCourse.Title" class="form-label"></label>
                        <input asp-for="NewCourse.Title" class="form-control" />
                        <span asp-validation-for="NewCourse.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCourse.Credits" class="form-label"></label>
                        <input asp-for="NewCourse.Credits" class="form-control" type="number" min="1" />
                        <span asp-validation-for="NewCourse.Credits" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCourse.Department" class="form-label"></label>
                        <input asp-for="NewCourse.Department" class="form-control" />
                        <span asp-validation-for="NewCourse.Department" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCourse.MaxStudents" class="form-label"></label>
                        <input asp-for="NewCourse.MaxStudents" class="form-control" type="number" min="1" />
                        <span asp-validation-for="NewCourse.MaxStudents" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">+ Add Course</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
