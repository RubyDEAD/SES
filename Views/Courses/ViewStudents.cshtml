@model SES.Models.ViewModels.CourseStudentsVm

<div class="container py-4">
    <!-- Header -->
    <div class="bg-white p-4 mb-4 rounded shadow-sm d-flex justify-content-between align-items-center">
        <h2 class="h4 fw-bold text-primary mb-0">
            üë©‚Äçüéì Students in <span class="text-dark">@Model.CourseTitle</span>
        </h2>
        <span class="badge bg-secondary fs-6">Total: @Model.TotalStudents</span>
    </div>

    <!-- Students Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light fw-semibold">
            Enrolled Students
        </div>
        <div class="card-body p-0">
            @if (Model.Students.Any())
            {
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 15%">Student ID</th>
                            <th>Name</th>
                            <th class="text-end" style="width: 20%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model.Students)
                        {
                            <tr>
                                <td class="fw-semibold">@s.Id</td>
                                <td>@s.Name</td>
                                <td class="text-end">
                                    <form asp-action="RemoveStudent" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                                        <input type="hidden" name="studentId" value="@s.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('Remove @s.Name from this course?')">
                                            <i class="fas fa-user-times me-1"></i> Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <em>No students enrolled in this course.</em>
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-3">
        <a asp-action="AdminIndex" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Courses
        </a>
    </div>
</div>
