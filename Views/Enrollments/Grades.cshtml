@model SES.Models.Enrollment
<h2>Grade Enrollment</h2>
<div>
    <p><strong>Student:</strong> @Model.Student.LastName, @Model.Student.FirstName</p>
    <p><strong>Course:</strong> @Model.Course.Title</p>
</div>
<form asp-action="Grade" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Grade</label>
        <select class="form-select" name="grade">
            <option value="">(None)</option>
            <option>A</option>
            <option>B</option>
            <option>C</option>
            <option>D</option>
            <option>F</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
